<div class="article_space">
  <p class="article_show"><%= link_to '一覧に戻る', articles_path, class: 'btn' %></p>
  <div class="row">
    <span class="label">タイトル</span>
    <span><%= @article.title %></span>
  </div>
  <div class="row">
    <span class="label">投稿者</span>
    <span><%= @article.author %></span>
  </div>
  <div class="row">
    <span class="label">内容</span>
    <span class="article_value"><%= @article.content %></span>
  </div>
</div>
