<div class="article_form">
  <% if article.errors.present? %>
    <ul>
      <% article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <%= form_with model: article, local: true do |f| %>
  <%= f.hidden_field :author, :value => article.employee.last_name %>
    <div class="form_group">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>

    <div class="form_group">
      <%= f.label :content %>
      <%= f.text_area :content %>
    </div>

    <%= f.submit '投稿' %>
  <% end %>
</div>
